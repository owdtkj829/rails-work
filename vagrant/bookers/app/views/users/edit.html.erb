<html>
<header class="navbar navbar-fixed-top navbar-inverse">
    <div class="container">
        <span style="color:white;">Bookers</span>
        <nav>
            <ul class="nav navbar-nav navbar-right">
                <% if user_signed_in? %>
                <span class="glyphicon glyphicon-home" aria-hidden="true">
                    <%= link_to'Home',user_path(current_user.id)%>
                </span>
                <span class="glyphicon glyphicon-user" aria-hidden="true">
                    <%= link_to'Users',users_path%>
                </span>
                <span class="glyphicon glyphicon-book" aria-hidden="true">
                    <%= link_to'Books',books_path%>
                </span>
                <span class="glyphicon glyphicon-log-out" aria-hidden="true">
                    <%= link_to 'logout',destroy_user_session_path, method: :delete %>
                </span>
                <% else %>
                <span class="glyphicon glyphicon-home">
                    <%= link_to'Home',user_path(current_user.id)%>
                </span>
                <span class="glyphicon glyphicon-link about" aria-hidden="true">
                    <%= link_to'About',home_about_path %>
                </span>
                <span class="glyphicon glyphicon-edit sign_up" aria-hidden="true">
                    <%= link_to'sign up',new_user_registration_path %>
                </span>
                <span class="glyphicon glyphicon-log-in sign_in" aria-hidden="true">
                    <%= link_to'login',new_user_session_path %>
                </span>
                <%end%>
            </ul>
        </nav>
    </div>
</header>
<br><br>
<div class="container">
    <div class="body">
        <% if @user.errors.any? %>
        <p>error</p>
        <% end %>
        <h2>User info</h2>
        <%= form_for(@user) do |f| %>
        <div class="field">
            <label for="user_name">Name</label>
            <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field">
            <label for="user_image">Image</label>
            <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
        </div>
        <div class="field">
            <label for="user_introdustion">Introduction</label>
            <%= f.text_field :introduction, autofocus: true%>
        </div>
        <div class="actions">
            <%= f.submit "Update User",class: 'btn btn-primary'%>
        </div>
        <% end %>
    </div>
</div>
<footer>
    <div class="container">
        <div class="row">
            <div class="col-xs-3 col-xs-offset-9">
                <p>CopyRight Infratop.inc</p>
            </div>
        </div>
    </div>
</footer>

</html>