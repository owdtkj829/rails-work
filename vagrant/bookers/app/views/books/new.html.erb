<body>
    <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <span style="color:white;">Bookers</span>
            <nav>
                <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true">
                        <%= link_to'Home',user_path(current_user.id)%>
                    </span>
                    <span class="glyphicon glyphicon-user" aria-hidden="true">
                        <%= link_to'Users',users_path%>
                    </span>
                    <span class="glyphicon glyphicon-book" aria-hidden="true">
                        <%= link_to'Books',books_path%>
                    </span>
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true">
                        <%= link_to 'logout',destroy_user_session_path, method: :delete %>
                    </span>
                    <% else %>
                    <span class="glyphicon glyphicon-home">
                        <%= link_to'Home',user_path(current_user.id)%>
                    </span>
                    <span class="glyphicon glyphicon-link about" aria-hidden="true">
                        <%= link_to'About',home_about_path %>
                    </span>
                    <span class="glyphicon glyphicon-edit sign_up" aria-hidden="true">
                        <%= link_to'sign up',new_user_registration_path %>
                    </span>
                    <span class="glyphicon glyphicon-log-in sign_in" aria-hidden="true">
                        <%= link_to'login',new_user_session_path %>
                    </span>
                    <%end%>
                </ul>
            </nav>
        </div>
    </header>
    <br><br><br>
    <% if flash[:notice] %>
    <div class="flash">
        <%= flash[:notice] %>
    </div>
    <% end %>
    <div class="body">
        <div class="container">
            <p id="notice"></p>
            <div class="row">
                <div class="col-xs-3">
                    <h2>User info</h2>
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>
                                    <%= attachment_image_tag @user, :profile_image,size:"100x100", fallback: "no_image.jpg" %>
                                </th>
                            </tr>
                            <th>name</th>
                            <th>
                                <%= @user.name %>
                            </th>
                            </tr>
                            <tr>
                                <th>introduction</th>
                                <th>
                                    <%= @user.introduction %>
                                </th>
                            </tr>
                        </tbody>
                    </table>
                    <div class="row">
                        <% if @user.id == current_user.id %>
                        <div class="row">
                            <%= link_to'edit',edit_user_path(current_user.id), class: 'btn btn-primary col-xs-12'%>
                        </div>
                        <%else%>
                        <div class="row">
                            <%= link_to'edit',user_path(current_user.id), class: 'btn btn-primary col-xs-12'%>
                        </div>
                        <% end %>
                    </div>
                    <div class="row">
                        <h2>New book</h2>
                        <%= form_for(@book) do |f| %>
                        <% if @book.errors.any? %>
                        <p>error</p>
                        <% end %>
                        <div>
                            <h4>Title</h4>
                            <%= f.text_field :title, class: 'col-xs-12'%>
                        </div>
                        <div>
                            <h4>Opinion</h4>
                            <%= f.text_area :body ,class: 'col-xs-12'%>
                        </div><br>
                        <div>
                            <%= f.submit 'Create Book',class: 'btn btn-primary col-xs-12' %>
                        </div>
                        <% end %>
                    </div>
                </div>
                <div class="col-xs-9">
                    <h2>Books</h2>
                    <table class="table ">
                        <thead>
                            <th></th>
                            <th>Title</th>
                            <th>Opinion</th>
                            <th></th>
                        </thead>
                        <tbody>
                            <% @books.each do |book| %>
                            <tr>
                                <th>
                                    <%= attachment_image_tag book.user,:profile_image,size:"40x40",fallback: "no_image.jpg"%>
                                </th>
                                <th>
                                    <%= link_to book.title,book_path(book.id) %>
                                </th>
                                <th>
                                    <%= book.body %>
                                </th>
                                <th></th>
                            </tr>
                            <%end%>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-xs-3 col-xs-offset-9">
                        <p>CopyRight Infratop.inc</p>
                    </div>
                </div>
            </div>
        </footer>
</body>

</html>