<body>
    <header class="navbar navbar-fixed-top navbar-inverse">
        <div class="container">
            <span style="color:white;">Bookers</span>
            <nav>
                <ul class="nav navbar-nav navbar-right">
                    <% if user_signed_in? %>
                    <span class="glyphicon glyphicon-home" aria-hidden="true">
                        <%= link_to'Home',root_path%>
                    </span>
                    <span class="glyphicon glyphicon-user" aria-hidden="true">
                        <%= link_to'Users',users_path%>
                    </span>
                    <span class="glyphicon glyphicon-book" aria-hidden="true">
                        <%= link_to'Books',books_path%>
                    </span>
                    <span class="glyphicon glyphicon-log-out" aria-hidden="true">
                        <%= link_to 'logout',destroy_user_session_path, method: :delete %>
                    </span>
                    <% else %>
                    <span class="glyphicon glyphicon-home">
                        <%= link_to'Home',root_path%>
                    </span>
                    <span class="glyphicon glyphicon-link about" aria-hidden="true">
                        <%= link_to'About',home_about_path %>
                    </span>
                    <span class="glyphicon glyphicon-edit sign_up" aria-hidden="true">
                        <%= link_to'sign up',new_user_registration_path %>
                    </span>
                    <span class="glyphicon glyphicon-log-in sign_in" aria-hidden="true">
                        <%= link_to'login',new_user_session_path %>
                    </span>
                    <%end%>
                </ul>
            </nav>
        </div>
    </header>
    <br><br><br>
    <div class="body">
        <div class="container">
            <% if flash[:notice] %>
            <div class="flash">
                <%= flash[:notice] %>
            </div>
            <% end %>
            <p id="notice"></p>
            <div class="row">
                <div class="top-message col-md-offset-3 col-md-6">
                    <h1>welcome to <span class="glyphicon glyphicon-book"><strong>Bookers</strong> !!</span></h1>
                    <p>In <span class="glyphicon glyphicon-book"></span><strong>Bookers</strong>, </p>
                    <p>you can share and exchange your opinions , inpressions , and emotions</p>
                    <p> about various books!</p>
                    <div class="btn-wrapper">
                        <div class="row">
                            <%= link_to 'Log In',new_user_session_path,class: 'btn btn-primary col-md-10'%>
                        </div>
                        <div class="row">
                            <%= link_to 'Sign Up',new_user_registration_path,class: 'btn btn-success col-md-10'%>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-xs-3 col-xs-offset-9">
                    <p>CopyRight Infratop.inc</p>
                </div>
            </div>
        </div>
    </footer>
</body>